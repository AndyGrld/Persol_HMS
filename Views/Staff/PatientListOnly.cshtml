@model List<Patient>

<partial name="Navbar" />

@{
    ViewData["Title"] = "Patient List";
}
<div class="grid">
    <partial name="SidebarPartial" />
    <div class="right">
        <h2 id="title" class="text-center">Patient List</h2>

        <form asp-action="CreateOrGetPatient" asp-for-route="PatientNo" method="post" autocomplete="off">
            <div class="forOldPatient">
                <div class="mb-3">
                    <label name="PatientNo" class="form-label">Patient's Id Number</label>
                    <input name="PatientNo" type="text" class="form-control" id="oldPatientId" aria-describedby="emailHelp" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        
        <div class="forPatientList">
            <form method="get" action="@Url.Action("PatientListOnly")">
                <div class="input-group mb-3">
                    <input type="text" name="search" class="form-control" placeholder="Search by Patient No, First Name or Last Name" aria-describedby="button-addon2">
                    <button class="btn btn-outline-primary" type="submit" id="button-addon2">Search</button>
                </div>
            </form>

            @if (Model.Any())
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Patient No</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Date of Birth</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.PatientNo</td>
                                <td>@($"{patient.FirstName} {patient.LastName}")</td>
                                <td>@patient.Gender</td>
                                <td>@patient.DateOfBirth.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("PatientList", new { page = ViewBag.CurrentPage - 1, search = ViewBag.Search })">Previous</a></li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPatients / ViewBag.PageSize + 1; i++)
                        {
                            <li class="page-item"><a href="@Url.Action("PatientList", new { page = i, search = ViewBag.Search })" class="@(i == ViewBag.CurrentPage ? "active page-link" : "page-link")">@i</a></li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPatients / ViewBag.PageSize + 1)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("PatientList", new { page = ViewBag.CurrentPage + 1, search = ViewBag.Search })">Next</a></li>
                        }
                    </ul>
                </nav>
            }
            else
            {
                <p>No patients</p>
            }
        </div>
    </div>
</div>

<script>
    const toggle = document.getElementById("isNew")
    const newContainer = document.querySelector(".forPatientList")
    const oldContainer = document.querySelector(".forOldPatient")
    const title = document.querySelector("#title")
    oldContainer.style.display = "none"
    toggle.value = "off";
    function display()
    {
        toggle.value = toggle.value == "on" ? "off" : "on"
        if(toggle.value == "on")
        {
            oldContainer.style.display = "block"
            newContainer.style.display = "none"
			toggle.innerText = "Patient List"
			title.innerText = "Add existing patient to queue"
        }else
        {
            oldContainer.style.display = "none"
            newContainer.style.display = "block"
			title.innerText = "Patient List"
			toggle.innerText = "Add to Queue"
        }
    }
</script>