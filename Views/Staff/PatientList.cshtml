@model List<Patient>

@{
    ViewData["Title"] = "Patient List";
}

<h2>Patient List</h2>

<form method="get" action="@Url.Action("PatientList")">
    <div class="input-group mb-3">
        <input type="text" name="search" class="form-control" placeholder="Search by Patient No" aria-describedby="button-addon2">
        <button class="btn btn-outline-primary" type="submit" id="button-addon2">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Patient No</th>
            <th>Name</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.PatientNo</td>
                <td>@($"{patient.FirstName} {patient.LastName}")</td>
                <td>@patient.Gender</td>
                <td>@patient.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a asp-action="PatientMedicalRecords" asp-route-patientNo="@patient.PatientNo">View Medicals</a>
                </td>
            </tr>
        }
    </tbody>
</table>
