@model DoctorQueueModel

<partial name="Navbar" />

@if (TempData.ContainsKey("D_ConfirmationMessage"))
{
    <div class="alert alert-success">
        @TempData["D_ConfirmationMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}
@if (TempData.ContainsKey("D_WarningMessage"))
{
    <div class="alert alert-danger">
        @TempData["D_WarningMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}

<div class="grid">
    <partial name="SidebarPartial" />

    <div class="right">
        <h2 class="text-center">Doctor Queue</h2>

        <form method="get" action="@Url.Action("DoctorQueue")">
            <div class="input-group mb-3">
                <input class="form-control" name="search" value="@Model.QueueViewModel.Search" type="text" placeholder="Search by Patient Id Number">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        </form>

        @if (Model.QueueViewModel.PatientsInLine.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>PatientNo</th>
                        <th>QueueNo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model.QueueViewModel.PatientsInLine)
                    {
                        <tr>
                            <td>@patient.PatientNo</td>
                            <td>@patient.QueueNo</td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-@patient.PatientNo">
                                    Diagnose Patient
                                </button>
                            </td>
                        </tr>
                        <div class="modal fade" id="exampleModal-@patient.PatientNo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Diagnose Patient</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form asp-action="SaveMedicalRecords" method="post" autocomplete="off">
                                            <div class="container text-center">
                                                <div class="row">
                                                    <div class="col">
                                                        <div class="mb-2">
                                                            <textarea asp-for="CreateMedicalViewModel.Symptoms" class="form-control" rows="4" placeholder="Symptoms"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="col">
                                                        <div class="mb-2">
                                                            <textarea asp-for="CreateMedicalViewModel.Diagnoses" class="form-control" rows="4" placeholder="Diagnoses"></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="drugFields">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[0].DrugName" class="form-control" placeholder="Drug Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[0].Dosage" class="form-control" placeholder="Dosage" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row field1">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[1].DrugName" class="form-control" placeholder="Drug Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[1].Dosage" class="form-control" placeholder="Dosage" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <button type="button" class="btn btn-danger remove-drug" onclick="removeDrug(1)">Remove Drug</button>
                                                        </div>
                                                    </div>
                                                    <div class="row field2">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[2].DrugName" class="form-control" placeholder="Drug Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[2].Dosage" class="form-control" placeholder="Dosage" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <button type="button" class="btn btn-danger remove-drug" onclick="removeDrug(2)">Remove Drug</button>
                                                        </div>
                                                    </div>
                                                    <div class="row field3">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[3].DrugName" class="form-control" placeholder="Drug Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[3].Dosage" class="form-control" placeholder="Dosage" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <button type="button" class="btn btn-danger remove-drug" onclick="removeDrug(3)">Remove Drug</button>
                                                        </div>
                                                    </div>
                                                    <div class="row field4">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[4].DrugName" class="form-control" placeholder="Drug Name" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[4].Dosage" class="form-control" placeholder="Dosage" />
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <button type="button" class="btn btn-danger remove-drug" onclick="removeDrug(4)">Remove Drug</button>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">Is the patient to be admitted?</label>
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="form-check">
                                                                <input asp-for="CreateMedicalViewModel.IsAdmitted" type="radio" class="form-check-input" id="IsAdmittedTrue" value="true">
                                                                <label style="position: relative;right:80px;" class="form-check-label" for="IsAdmittedTrue">Yes</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-check">
                                                                <input asp-for="CreateMedicalViewModel.IsAdmitted" type="radio" class="form-check-input" id="IsAdmittedFalse" value="false">
                                                                <label style="position: relative;right:80px;" class="form-check-label" for="IsAdmittedFalse">No</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <input asp-for="CreateMedicalViewModel.PatientNo" value="@patient.PatientNo" style="display:none" />

                                                <!-- Lab related fields -->
                                                <div class="form-group my-2">
                                                    <label class="control-label">Does the patient need a lab?</label>
                                                    <div class="row my-2">
                                                        <div class="col">
                                                            <div class="form-check">
                                                                <input asp-for="CreateMedicalViewModel.NeedsLab" type="radio" class="form-check-input" id="NeedsLabTrue" value="true">
                                                                <label class="form-check-label" for="NeedsLabTrue">Yes</label>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="form-check">
                                                                <input asp-for="CreateMedicalViewModel.NeedsLab" type="radio" class="form-check-input" id="NeedsLabFalse" value="false">
                                                                <label class="form-check-label" for="NeedsLabFalse">No</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!-- Dynamic Lab Fields -->
                                                <div id="labFieldsContainer" style="display:none;">
                                                    <div class="form-group" id="labFieldsTemplate">
                                                        <label for="LabName">Select Lab Name:</label>
                                                        <div class="dropdown">
                                                            <select asp-for="CreateMedicalViewModel.SelectedLabNames" class="form-control lab-dropdown" multiple>
                                                                <option value="">Select Lab Name</option>
                                                                @foreach (var labName in Model.CreateMedicalViewModel.AvailableLabNames)
                                                                {
                                                                    <option value="@labName">@labName</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                                @* @section scripts {
                                            <script>
                                                $(document).ready(function () {
                                                    // Show/hide lab fields based on the radio button selection
                                                    $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                                                        if ($(this).val() === 'true') {
                                                            $('#labFieldsContainer').show();
                                                        } else {
                                                            $('#labFieldsContainer').hide();
                                                        }
                                                    });
                                                });
                                            </script>
                                                } *@


                                                @if (Model.CreateMedicalViewModel.NeedsLab)
                                                {
                                                    <div>
                                                        <label for="LabName">Enter Lab Name:</label>
                                                        <input asp-for="CreateMedicalViewModel.LabName" class="form-control" placeholder="Lab Name" />
                                                    </div>
                                                }

                                                <div class="modal-footer">
                                                    <button id="addMoreDrugs" onclick="addDrug()" type="button" class="btn btn-success w-100">Add More Drugs</button>
                                                    <button type="submit" class="btn btn-primary w-100">Save Medical Records</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.QueueViewModel.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage - 1, search = Model.QueueViewModel.Search })">Previous</a></li>
                    }

                    @for (int i = 1; i <= Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1; i++)
                    {
                        <li class="page-item"><a href="@Url.Action("DoctorQueue", new { page = i, search = Model.QueueViewModel.Search })" class="@(i == Model.QueueViewModel.CurrentPage ? "active page-link" : "page-link")">@i</a></li>
                    }

                    @if (Model.QueueViewModel.CurrentPage < Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage + 1, search = Model.QueueViewModel.Search })">Next</a></li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <p>No patients in line.</p>
        }
    </div>
</div>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
	<script>
	
	$(document).ready(function() {

	  // Initially hide all drug fields except the first one
	  for (let i = 2; i <= 4; i++) {
		$(`.field${i}`).hide();
	  }

	  // Add drug button event handler
	  $("#addMoreDrugs").click(function() {
		let currentDrugField = $(".field:visible").last();
		let nextDrugFieldIndex = parseInt(currentDrugField.attr("class").split(" ")[1]) + 1;

		if (nextDrugFieldIndex <= 4) {
		  $(`.field${nextDrugFieldIndex}`).show();
		} else {
		  alert("Maximum of 4 drugs allowed.");
		}
	  });

	  // Remove drug button event handler
	  $(".remove-drug").click(function() {
		let drugFieldIndex = parseInt($(this).parent().parent().attr("class").split(" ")[1]);

		if (drugFieldIndex > 1) {
		  $(`.field${drugFieldIndex}`).hide();
		} else {
		  alert("Cannot remove the first drug field.");
		}
	  });
	});
	
	</script>
    <script>
        $(document).ready(function () {
            // Show/hide lab fields based on the radio button selection
            $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#labFieldsContainer').show();
                } else {
                    $('#labFieldsContainer').hide();
                }
            });
        });
    </script>
}
