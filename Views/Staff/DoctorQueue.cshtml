@model DoctorQueueModel

<partial name="Navbar" />

@if (TempData.ContainsKey("D_ConfirmationMessage"))
{
    <div class="alert alert-success">
        @TempData["D_ConfirmationMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}
@if (TempData.ContainsKey("D_WarningMessage"))
{
    <div class="alert alert-danger">
        @TempData["D_WarningMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}

<div class="grid">
    <partial name="SidebarPartial" />

    <div class="right">

        <div class="form-card">
            <h2 class="text-center py-3">Doctor Queue</h2>
            <form method="get" class="search" action="@Url.Action("DoctorQueue")">
                <div class="input-group mb-3 px-3">
                    <input type="text" name="search" class="form-control" placeholder="Search by Patient_No, Firstname or Lastname" aria-describedby="button-addon2">
                    <button class="search-button" type="submit" id="button-addon2">Search</button>
                </div>
            </form>

            @if (Model.QueueViewModel.PatientsInLine.Any())
            {
                <table class="custom-table">
                    <thead>
                        <tr>
                            <th>PatientNo</th>
                            <th>Patient Name</th>
                            <th>QueueNo</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model.QueueViewModel.PatientsInLine)
                        {
                            <tr>
                                <td>@patient.PatientNo</td>
                                <td>@($"{patient.Patient.LastName} {patient.Patient.FirstName}")</td>
                                <td>@patient.QueueNo</td>
                                <td>
                                    <button type="button" class="table-button" data-bs-toggle="modal" data-bs-target="#exampleModal-@patient.PatientNo">
                                        Diagnose Patient
                                    </button>
                                </td>
                            </tr>
                            <div class="modal fade" id="exampleModal-@patient.PatientNo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Diagnose Patient</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <form asp-action="SaveMedicalRecords" method="post" autocomplete="off">
                                                <div class="container">

                                                    <!-- Check if the patient has visited the lab -->
                                                    @if (patient.HasVisitedLab)
                                                    {
                                                        <div class="diagnose_row">
                                                            <div class="diagnose_col">
                                                                <div class="mb-2">
                                                                    <label asp-for="CreateMedicalViewModel.Symptoms" class="form-label">Symptoms</label>
                                                                    <textarea asp-for="CreateMedicalViewModel.Symptoms" class="form-control" rows="4" placeholder="Symptoms">@Model.CreateMedicalViewModel.ExistingMedicalRecords.FirstOrDefault()?.Symptom.Symptoms</textarea>
                                                                </div>
                                                            </div>
                                                            <div class="diagnose_col">
                                                                <div class="mb-2">
                                                                    <label asp-for="CreateMedicalViewModel.Diagnoses" class="form-label">Diagnoses</label>
                                                                    <textarea asp-for="CreateMedicalViewModel.Diagnoses" class="form-control" rows="4" placeholder="Diagnoses">@Model.CreateMedicalViewModel.ExistingMedicalRecords.FirstOrDefault()?.Diagnoses</textarea>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div id="drugFields">
                                                            @foreach (var drug in Model.CreateMedicalViewModel.ExistingMedicalRecords.FirstOrDefault()?.Drugs ?? Enumerable.Empty<Drug>())
                                                            {
                                                                <div class="drug_input" data-index="@drug.ID">
                                                                    <div class="col1">
                                                                        <div class="mb-2">
                                                                            <input asp-for="CreateMedicalViewModel.DrugNames[@drug.ID].DrugName" class="form-control" placeholder="Drug Name" value="@drug.DrugName" />
                                                                        </div>
                                                                    </div>
                                                                    <div class="col1">
                                                                        <div class="mb-2">
                                                                            <input asp-for="CreateMedicalViewModel.DrugNames[@drug.ID].Dosage" class="form-control" placeholder="Dosage" value="@drug.Dosage" />
                                                                        </div>
                                                                    </div>
                                                                    <div class="close_button">
                                                                        <button type="button" class="btn btn-close btn-danger remove-drug" aria-label="Close" onclick="removeDrug(@drug.ID)"></button>
                                                                    </div>
                                                                </div>
                                                            }
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <!-- Fields for patients who have not visited the lab -->
                                                        <div class="diagnose_row">
                                                            <div class="diagnose_col">
                                                                <div class="mb-2">
                                                                    <label asp-for="CreateMedicalViewModel.Symptoms" class="form-label">Symptoms</label>
                                                                    <textarea asp-for="CreateMedicalViewModel.Symptoms" class="form-control" rows="4" placeholder="Symptoms"></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="diagnose_col">
                                                                <div class="mb-2">
                                                                    <label asp-for="CreateMedicalViewModel.Diagnoses" class="form-label">Diagnoses</label>
                                                                    <textarea asp-for="CreateMedicalViewModel.Diagnoses" class="form-control" rows="4" placeholder="Diagnoses"></textarea>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div id="drugFields">
                                                            <div class="drug_input field0" data-index="0">
                                                                <div class="col1">
                                                                    <div class="mb-2">
                                                                        <input asp-for="CreateMedicalViewModel.DrugNames[0].DrugName" class="form-control" placeholder="Drug Name" />
                                                                    </div>
                                                                </div>
                                                                <div class="col1">
                                                                    <div class="mb-2">
                                                                        <input asp-for="CreateMedicalViewModel.DrugNames[0].Dosage" class="form-control" placeholder="Dosage" />
                                                                    </div>
                                                                </div>
                                                                <div class="close_button">
                                                                    <button type="button" class="btn btn-close btn-danger remove-drug" aria-label="Close" onclick="removeDrug(0)"></button>
                                                                </div>
                                                            </div>
                                                            <!-- Add more drug fields as needed -->
                                                        </div>
                                                    }

                                                    <!-- Other fields... -->

                                                    <div class="modal-footer">
                                                        <button id="addMoreDrugs" onclick="addDrug()" type="button" class="btn btn-success w-100">Add More Drugs</button>
                                                        <button type="submit" class="btn btn-primary w-100">Save Medical Records</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>

                <nav class="py-3" aria-label="Page navigation example">
                    <ul class="pagination justify-content-center">
                        @if (Model.QueueViewModel.CurrentPage > 1)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage - 1, search = Model.QueueViewModel.Search })">Previous</a></li>
                        }

                        @for (int i = 1; i <= Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1; i++)
                        {
                            <li class="page-item"><a href="@Url.Action("DoctorQueue", new { page = i, search = Model.QueueViewModel.Search })" class="@(i == Model.QueueViewModel.CurrentPage ? "active page-link" : "page-link")">@i</a></li>
                        }

                        @if (Model.QueueViewModel.CurrentPage < Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1)
                        {
                            <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage + 1, search = Model.QueueViewModel.Search })">Next</a></li>
                        }
                    </ul>
                </nav>
            }
            else
            {
                <p class="p-3 no-patinet">No patients in line.</p>
            }
        </div>
    </div>
</div>

<partial name="FooterPartial" />

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show/hide lab fields based on the radio button selection
            $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#labFieldsContainer').show();
                } else {
                    $('#labFieldsContainer').hide();
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            // Function to add drug input fields
            var maxDrugFields = 5;
            function addDrug() {
                if ($('.drug_input:visible').length < maxDrugFields) {
                    $('.drug_input:hidden:first').show();
                }
            }

            // Function to remove drug input fields
            function removeDrug(index) {
            var drugField = $(`.drug_input[data-index="${index}"]:visible`);
            if (drugField.length > 0) {
                drugField.hide();
                drugField.find('input').val('');
                console.log("Drug removed");
            }
        }

            // Show/hide lab fields based on the radio button selection
            $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#labFieldsContainer').show();
                } else {
                    $('#labFieldsContainer').hide();
                }
            });
            $('input[name="CreateMedicalViewModel.IsAdmitted"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#WardContainer').show();
                } else {
                    $('#WardContainer').hide();
                }
            });

            // Add More Drugs button click event
            $('#addMoreDrugs').click(function () {
                addDrug();
            });

            // Remove Drug button click event
            $('#drugFields').on('click', '.remove-drug', function () {
                var removeIndex = $(this).closest('.drug_input').data('index');
                removeDrug(removeIndex);
            });

            // Initially hide drug fields
            $('.drug_input.field0, .drug_input.field1, .drug_input.field2, .drug_input.field3, .drug_input.field4').hide();
        });
    </script>
    <script>
        $( '#multiple-select-field' ).select2({
            theme: "bootstrap-5",
            width: $( this ).data( 'width' ) ? $( this ).data( 'width' ) : $( this ).hasClass( 'w-100' ) ? '100%' : 'style',
            placeholder: $( this ).data( 'placeholder' ),
            closeOnSelect: false,
        });
    </script>
}
