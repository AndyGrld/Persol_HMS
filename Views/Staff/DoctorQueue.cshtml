@model DoctorQueueModel

<partial name="Navbar" />

@if (TempData.ContainsKey("D_ConfirmationMessage"))
{
    <div class="alert alert-success">
        @TempData["D_ConfirmationMessage"]
    </div>
}
@if (TempData.ContainsKey("D_WarningMessage"))
{
    <div class="alert alert-danger">
        @TempData["D_WarningMessage"]
    </div>
}

<div class="grid">
    <div class="left">
        <a class="left-content" href="@Url.Action("DoctorQueue")">
            <button type="button" class="btn btn-primary w-100">Home</button>
        </a>
        <a href="@Url.Action("GetNextPatientinLine")">
            <button type="button" class="btn btn-primary w-100">Move onto next patient</button>
        </a>
    </div>
    <div class="right">
        <h2 class="text-center">Doctor Queue</h2>

        <form method="get" action="@Url.Action("DoctorQueue")">
            <div class="input-group mb-3">
                <input class="form-control" name="search" value="@Model.QueueViewModel.Search" type="text" placeholder="Search by Patient Id Number">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        </form>

        @if (Model.QueueViewModel.PatientsInLine.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>PatientNo</th>
                        <th>QueueNo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model.QueueViewModel.PatientsInLine)
                    {
                        <tr>
                            <td>@patient.PatientNo</td>
                            <td>@patient.QueueNo</td>
                            <td>
                                @* <a href="@Url.Action("Doctor", new { patientNo = "@patient.PatientNo" })">
                                    <button class=" btn btn-primary">
									    Diagnose Patient
								    </button>
                                </a> *@
								 <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-@patient.PatientNo">
									Diagnose Patient
								</button> 
                            </td>
                        </tr>
                        <div class="modal fade" id="exampleModal-@patient.PatientNo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Diagnose Patient</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                        <div class="modal-body">
										
                                            <form asp-action="SaveMedicalRecords" method="post" autocomplete="off">
                                                <div class="container text-center">
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <textarea asp-for="CreateMedicalViewModel.Symptoms" class="form-control" rows="4" placeholder="Symptoms"></textarea>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <textarea asp-for="CreateMedicalViewModel.Diagnoses" class="form-control" rows="4" placeholder="Diagnoses"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>
                                                <div id="drugFields">
                                                    <div class="row">
                                                        <div class="col">
                                                                         
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[0].DrugName" class="form-control" placeholder="Drug Name"/>
                                                            </div>
                                                        </div>
                                                        <div class="col">
                                                            <div class="mb-2">
                                                                <input asp-for="CreateMedicalViewModel.DrugNames[0].Dosage" class="form-control" placeholder="Dosage"/>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                    <div class="form-group">
                                                        <label class="control-label">Is the patient to be admitted?</label>
                                                            <div class="form-check">
                                                                <input asp-for="CreateMedicalViewModel.IsAdmitted" type="radio" class="form-check-input" id="IsAdmittedTrue" value="true">
                                                                <label class="form-check-label" for="IsAdmittedTrue">Yes</label>
                                                            </div>
                                                    </div>
                                                    <div class="form-check">
                                                        <input asp-for="CreateMedicalViewModel.IsAdmitted" type="radio" class="form-check-input" id="IsAdmittedFalse" value="false">
                                                        <label class="form-check-label" for="IsAdmittedFalse">No</label>
                                                    </div>

                                               
                                                    <div class="form-group" id="WardNoDiv" style="display: none;">
                                                        <label asp-for="CreateMedicalViewModel.WardNo" class="control-label">Ward Number</label>
                                                        <input asp-for="CreateMedicalViewModel.WardNo" type="text" class="form-control" id="WardNo">
                                                    </div>
													<input asp-for="CreateMedicalViewModel.PatientNo" value="@patient.PatientNo" style="display:none" />
                                                    <div class="modal-footer">
														<button id="addMoreDrugs" type="button" class="btn btn-primary w-100">Add More Drugs</button>
                                                        <button type="submit" class="btn btn-primary w-100">Save Medical Records</button>
                                                    </div>
												</div>
                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.QueueViewModel.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage - 1, search = Model.QueueViewModel.Search })">Previous</a></li>
                    }

                    @for (int i = 1; i <= Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1; i++)
                    {
                        <li class="page-item"><a href="@Url.Action("DoctorQueue", new { page = i, search = Model.QueueViewModel.Search })" class="@(i == Model.QueueViewModel.CurrentPage ? "active page-link" : "page-link")">@i</a></li>
                    }

                    @if (Model.QueueViewModel.CurrentPage < Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("DoctorQueue", new { page = Model.QueueViewModel.CurrentPage + 1, search = Model.QueueViewModel.Search })">Next</a></li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <p>No patients in line.</p>
        }
    </div>
</div>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        document.getElementById("IsAdmittedTrue").onchange = function () {
            document.getElementById("WardNoDiv").style.display = this.checked ? "block" : "none";
        };
        document.getElementById("IsAdmittedFalse").onchange = function () {
            document.getElementById("WardNoDiv").style.display = this.checked ? "none" : "block";
        };
    </script>
    <script>
        $(document).ready(function () {
            // Handle button click to set PatientNo in the hidden field
            $('.btn-primary').click(function () {
                var patientNo = $(this).data('patient-no');
                $('#PatientNoField').val(patientNo);
            });

            // Handle radio button change to toggle WardNoDiv visibility
            $('input[name="Medical.IsAdmitted"]').change(function () {
                $('#WardNoDiv').toggle(this.value === 'true');
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var index = 1;
            $('#addMoreDrugs').click(function () {
                $('#drugFields').append(`
                            <div class="row">
                                <div class="col">
                                    <div class="mb-2">
                                        <input placeholder="Drug Name" name="CreateMedicalViewModel.DrugNames[${index}].DrugName" id="drugName${index}" class="form-control" />
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="mb-2">
                                        <input placeholder="Dosage" name="CreateMedicalViewModel.DrugNames[${index}].Dosage" id="dosage${index}" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        `);
                index++;
            });
        });
    </script>x
}
