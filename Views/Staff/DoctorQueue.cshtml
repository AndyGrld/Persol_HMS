                                                            <div class="drug_input field9" data-index="9">
                                                                <div class="col1">
                                                                    <input asp-for="CreateMedicalViewModel.DrugNames[9].DrugName" class="form-control" placeholder="Drug Name" />
                                                                </div>
                                                                <div class="col1">
