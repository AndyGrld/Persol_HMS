@model Persol_HMS.Models.ViewModels.LabsViewModel

<partial name="Navbar" />

@if (TempData.ContainsKey("L_ConfirmationMessage"))
{
    <div class="alert alert-success">
        @TempData["L_ConfirmationMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}
@if (TempData.ContainsKey("L_WarningMessage"))
{
    <div class="alert alert-danger">
        @TempData["L_WarningMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}

<div class="grid">
    <partial name="SidebarPartial" />
    <div class="right" style="display:grid;grid-template-columns:repeat(2,1fr);gap:20px">
        <form class="p-3 form-card" asp-controller="Staff" asp-action="PatientLab" autocomplete="off">
            <h2 class="text-center">Lab for Patient: @($"{Model.patient.FirstName} {Model.patient.LastName}")</h2>
            <hr>
            @for (int i = 0; i < Model.Labs.Count; i++)
            {
                <div class="container text-center lab-fields">
                    <div class="row1 mb-2">
                        <div class="col">
                            <div>
                                <h5>
                                    @Model.Labs[i].LabName
                                </h5>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <textarea asp-for="Labs[i].Result" class="form-control" placeholder="Lab Result"></textarea>
                            </div>
                        </div>
                        <div class="col">
                            <div>
                                <textarea asp-for="Labs[i].Notes" class="form-control" placeholder="Lab Notes"></textarea>
                            </div>
                        </div>
                    </div>
                    <input asp-for="patient.PatientNo" hidden />
                    <input asp-for="Labs[i].LabName" hidden />
                </div>
            }

