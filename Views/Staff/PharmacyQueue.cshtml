@model Persol_HMS.Models.ViewModels.PharmacyQueueViewModel

<partial name="Navbar" />

@if (TempData.ContainsKey("P_ConfirmationMessage"))
{
    <div class="alert alert-success">
        @TempData["P_ConfirmationMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}
@if (TempData.ContainsKey("P_WarningMessage"))
{
    <div class="alert alert-danger">
        @TempData["P_WarningMessage"]
        <button type="button" style="position:absolute;right: 0" data-bs-dismiss="alert" class="btn-close" aria-label="Close"></button>
    </div>
}

<div class="grid">
    <partial name="SidebarPartial" />

    <div class="right">
        <h2 class="text-center">Pharmacy Queue</h2>

        <form method="get" action="@Url.Action("PharmacyQueue")">
            <div class="input-group mb-3">
                <input class="form-control" name="search" value="@Model.QueueViewModel.Search" type="text" placeholder="Search by Patient Id Number">
                <button class="btn btn-outline-primary" type="submit">Search</button>
            </div>
        </form>

        @if (Model.PatientsWithDrugs.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>PatientNo</th>
                        <th>Patient Name</th>
                        <th>QueueNo</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patientWithDrugs in Model.PatientsWithDrugs)
                    {
                        <tr>
                            <td>@patientWithDrugs.PatientQueue.PatientNo</td>
                            <td>@patientWithDrugs.PatientQueue.Patient.LastName @patientWithDrugs.PatientQueue.Patient.FirstName</td>
                            <td>@patientWithDrugs.PatientQueue.QueueNo</td>
                            <td>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-@patient.PatientNo">
                                    Give Drugs
                                </button>
                            </td>
                        </tr>
                        <div class="modal fade" id="exampleModal-@patientWithDrugs.PatientQueue.PatientNo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Diagnose Patient</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form asp-action="SaveMedicalRecords" method="post" autocomplete="off">
                        <div class="container text-center">

                            <!-- Display drugs associated with the patient -->
                            @if (patientWithDrugs.PatientDrugs.Any())
                            {
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Drug Name</th>
                                            <th>Dosage</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var drug in patientWithDrugs.PatientDrugs)
                                        {
                                            <tr>
                                                <td>@drug.DrugName</td>
                                                <td>@drug.Dosage</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No drugs associated with this patient.</p>
                            }

                            <!-- Your existing form inputs -->

                            <div class="modal-footer">
                                <button id="addMoreDrugs" onclick="addDrug()" type="button" class="btn btn-success w-100">Add More Drugs</button>
                                <button type="submit" class="btn btn-primary w-100">Save Medical Records</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation example">
                <ul class="pagination justify-content-center">
                    @if (Model.QueueViewModel.CurrentPage > 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("PharmacyQueue", new { page = Model.QueueViewModel.CurrentPage - 1, search = Model.QueueViewModel.Search })">Previous</a></li>
                    }

                    @for (int i = 1; i <= Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1; i++)
                    {
                        <li class="page-item"><a href="@Url.Action("PharmacyQueue", new { page = i, search = Model.QueueViewModel.Search })" class="@(i == Model.QueueViewModel.CurrentPage ? "active page-link" : "page-link")">@i</a></li>
                    }

                    @if (Model.QueueViewModel.CurrentPage < Model.QueueViewModel.TotalPatients / Model.QueueViewModel.PageSize + 1)
                    {
                        <li class="page-item"><a class="page-link" href="@Url.Action("PharmacyQueue", new { page = Model.QueueViewModel.CurrentPage + 1, search = Model.QueueViewModel.Search })">Next</a></li>
                    }
                </ul>
            </nav>
        }
        else
        {
            <p>No patients in line.</p>
        }
    </div>
</div>
@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        $(document).ready(function () {
            // Show/hide lab fields based on the radio button selection
            $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#labFieldsContainer').show();
                } else {
                    $('#labFieldsContainer').hide();
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            // Function to add drug input fields
            function addDrug() {
                var maxDrugFields = 4;

                for (var i = 1; i <= maxDrugFields; i++) {
                    var drugField = $(`.drug_input.field${i}:hidden:first`);
                    if (drugField.length > 0) {
                        drugField.show();
                        break;
                    }
                }
            }

            // Function to remove drug input fields
            function removeDrug(index) {
                var drugField = $(`.drug_input[data-index="${index}"]:visible`);
                
                if (drugField.length > 0) {
                    drugField.hide();
                    drugField.find('input').val('');
                    console.log("Drug removed");
                }
            }

            // Show/hide lab fields based on the radio button selection
            $('input[name="CreateMedicalViewModel.NeedsLab"]').change(function () {
                if ($(this).val() === 'true') {
                    $('#labFieldsContainer').show();
                } else {
                    $('#labFieldsContainer').hide();
                }
            });

            // Add More Drugs button click event
            $('#addMoreDrugs').click(function () {
                addDrug();
            });

            // Remove Drug button click event
            $('#drugFields').on('click', '.remove-drug', function () {
                var removeIndex = $(this).closest('.drug_input').data('index');
                removeDrug(removeIndex);
            });

            // Initially hide drug fields
            $('.drug_input.field1, .drug_input.field2, .drug_input.field3, .drug_input.field4').hide();
        });
    </script>
}
