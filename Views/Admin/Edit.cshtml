@model User

<h4>Edit User</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-floating mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <div class="form-floating mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="form-floating my-3">
            <input asp-for="MiddleName" class="form-control" autocomplete="middlename" aria-required="true" />
            <label asp-for="MiddleName"></label>
        </div>
        <div class="form-floating mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
        <div class="form-floating my-3">
            <input asp-for="DateOfBirth" class="form-control" type="date" aria-required="true" />
            <label asp-for="DateOfBirth"></label>
        </div>
        <div class="form-floating my-3">
            <select asp-for="DepartmentId" class="form-select" id="floatingSelect" aria-label="Floating label select example">
                <option selected>Select Department</option>
                <option value="1">Records</option>
                <option value="2">Nursing</option>
                <option value="3">Doctor</option>
                <option value="4">Lab</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
