@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}


<div class="center-card">
<h1 class="text-center title">Welcome to Persol HMS<h1/>
<div class="card fs-5">
    <div class="card-header">
        <h1  class="fs-3">@ViewData["Title"]</h1>
    </div>
    <form id="account" method="post">
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Username" class="form-label"></label>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            
        </div>
        <div class="card-body">
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="container text-center card-body">
            <div class="row">
                <div class="col">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="col">
                    <a style="text-decoration: none; color: white" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                        <button type="button" class="w-100 btn btn-lg btn-primary">
                        Register as a new user</button>
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
